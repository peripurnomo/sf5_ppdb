{% extends 'base.html.twig' %}

{% block title %}
	{{ __app_name__ }} - Change Password
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col s12">
    	<h3 class="blue-text center-align">Change Password</h3>
			
			{{ form_start(form) }}
  			<div class="row red-text">
  				<div class="col s12">
  					{{ form_errors(form) }}
  				</div>
  			</div>
				
				<div class="row">
					{{ form_row(form.currentPassword) }}
				</div>

				<div class="row">
					{{ form_row(form.newPassword) }}
				</div>

				<div class="row">
					<div class="col s12">
	          <button type="submit" class="btn blue col s12">Update</button>
					</div>
				</div>
			{{ form_end(form) }}
		</div>
	</div>	    
{% endblock %}