{% for post in posts %}
  <div class="row">
  	<div class="col s12">
	    <h5>{{ post.title }}</h5>
			<span>Posted at : {{ post.created ? post.created|date('Y-m-d H:i:s') : ''}}</span>
  		<p>{{ post.body }}</p>
  	</div>

    <div class="col s12">
			<a class="btn col green" href="{{ path('app_edit_post', {'id': post.id}) }}">edit</a>
			{{ include('post/_delete_form.html.twig') }}
    </div>
  </div>
{% else %}
  <p>No posts found.</p>
  <a href="{{ path('app_new_post') }}">Let's create one ;)</a>
{% endfor %}